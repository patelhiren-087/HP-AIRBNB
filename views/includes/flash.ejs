<% if(success && success.length) { %>
    <div id="success-alert" class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert">
        <%= success %>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
          setTimeout(function () {
            var alertElement = document.getElementById('success-alert');
            if (alertElement) {
              alertElement.remove();
            }
          }, 3000); 
        });
      </script>
<% } %>
    








<% if(error && error.length) { %>
    <div id="error-alert" class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert">
        <%= error %>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function () {
          setTimeout(function () {
            var alertElement = document.getElementById('error-alert');
            if (alertElement) {
              alertElement.remove();
            }
          }, 3000); 
        });
      </script>
<% } %>
    